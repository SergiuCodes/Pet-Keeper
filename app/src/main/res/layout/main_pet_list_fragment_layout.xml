<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModelFromLayout"
            type="com.example.petkeeper.viewmodel.main.PetsViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PetListFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/blkcry"
            android:text="@string/app_name"
            android:textColor="@color/app_lavender_light"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/btn_add_pet"
                android:layout_width="70dp"
                android:layout_marginBottom="5dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/addpetpng"
                bind:tint="@color/white" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pets_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                bind:setPetsList="@{viewModelFromLayout.petsList}" />

        </LinearLayout>


    </FrameLayout>
</layout>