<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/app_gray">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <EditText
                android:id="@+id/et_pet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:fontFamily="@font/nexalight"
                android:gravity="left"
                android:hint="@string/pet_name_hint"
                android:inputType="textVisiblePassword"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/app_red"
                android:textSize="16sp"
                android:textStyle="italic"
                app:backgroundTint="@color/app_dark_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_pet_species"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ems="10"
                android:fontFamily="@font/nexalight"
                android:gravity="start"
                android:hint="@string/pet_species_hint"
                android:inputType="textVisiblePassword"
                android:textColor="@color/black"
                android:textCursorDrawable="@color/app_red"
                android:textSize="16sp"
                android:textStyle="italic"
                app:backgroundTint="@color/app_dark_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_pet_name" />

            <RelativeLayout
                android:id="@+id/date_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_pet_species">

                <TextView
                    android:id="@+id/tv_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/nexalight"
                    android:text="@string/DOB_text"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_datepicker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/tv_dob"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/calendar_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/image_buttons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:layout_constraintEnd_toEndOf="@+id/date_buttons_layout"
                app:layout_constraintStart_toStartOf="@+id/date_buttons_layout"
                app:layout_constraintTop_toBottomOf="@+id/date_buttons_layout">

                <TextView
                    android:id="@+id/image_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nexalight"
                    android:text="@string/image_buttons_header"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_launch_camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/image_header"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/camera_icon" />

                <ImageView
                    android:id="@+id/btn_open_gallery"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/btn_launch_camera"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/gallery_icon" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginStart="3dp"
                android:elevation="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_buttons_layout" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pet_image">

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nexalight"
                    android:text="@string/save_text"
                    android:textAllCaps="true"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@id/tv_save"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/save_icon"
                    android:text="@string/save_button" />

                <ImageView
                    android:id="@+id/btn_cancel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/btn_save"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/cancel_icon"
                    android:text="@string/btn_cancel" />

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@id/btn_cancel"
                    android:fontFamily="@font/nexalight"
                    android:text="@string/cancel_text"
                    android:textAllCaps="true"
                    android:textSize="16sp" />


            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
