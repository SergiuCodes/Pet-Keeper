<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_gray"
        tools:context=".ui.fragments.notifications.MealNotificationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textfields_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                app:boxStrokeColor="@color/app_red"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_notification_title"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/nexalight"
                    android:layout_height="wrap_content"
                    android:hint="@string/notification_title" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_notification_message"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/nexalight"
                        android:layout_height="wrap_content"
                        android:hint="@string/notification_message" />

                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/date_buttons_layout"
            app:layout_constraintTop_toBottomOf="@id/textfields_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_header_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/nexalight"
                android:text="@string/choose_notification_date"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btn_datepicker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_header_date"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/calendar_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_buttons_layout"
            app:layout_constraintTop_toBottomOf="@id/date_buttons_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/tv_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/nexalight"
                android:text="@string/choose_notification_time"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btn_timepicker"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/tv_header_time"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_clock" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:backgroundTint="@color/app_dark_green"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="Schedule notification"
            android:textColor="@color/app_yellow"
            android:fontFamily="@font/nexalight"
            app:layout_constraintEnd_toEndOf="@+id/time_buttons_layout"
            app:layout_constraintStart_toStartOf="@+id/time_buttons_layout"
            app:layout_constraintTop_toBottomOf="@+id/time_buttons_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>