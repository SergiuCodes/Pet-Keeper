<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_gray"
        tools:context=".ui.fragments.notifications.AddNotificationFragment">

        <TextView
            android:id="@+id/tv_notification_fragment_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nexalight"
            android:text="@string/notification_fragment_type_title"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pet_species_header_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_fragment_details"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_notification_fragment_header" />

        <TextView
            android:id="@+id/tv_pet_species_header_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_fragment_details2"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/view"
            android:layout_width="250dp"
            android:layout_height="320dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangle_rounded"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_pet_species_header_description" />

        <RelativeLayout
            android:id="@+id/first_buttons"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view">

            <ImageView
                android:id="@+id/btn_meal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/iconfood" />

            <ImageView
                android:id="@+id/btn_medicine"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/btn_meal"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/iconmedicine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/second_group_buttons"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/first_buttons"
            app:layout_constraintStart_toStartOf="@+id/first_buttons"
            app:layout_constraintTop_toBottomOf="@+id/first_buttons">

            <ImageView
                android:id="@+id/btn_vaccination"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/iconvaccination" />

            <ImageView
                android:id="@+id/btn_deworming"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/btn_vaccination"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY"
                android:src="@drawable/gallery_icon" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>